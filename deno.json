{
  "imports": {
    "lume/": "https://cdn.jsdelivr.net/gh/lumeland/lume@3.2.1/",
    "@/": "./src/"
  },
  "tasks": {
    "lume": "deno run -P=lume lume/cli.ts",
    "build": "ENV=PROD deno task lume",
    "serve": "ENV=DEV deno task lume -s",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "ENV=TEST deno test -A"
  },
  "unstable": ["temporal"],
  "lock": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "lume/jsx-runtime",
    "lib": ["deno.ns", "dom", "dom.iterable"]
  },
  "lint": {
    "plugins": ["https://cdn.jsdelivr.net/gh/lumeland/lume@3.2.1/lint.ts"],
    "rules": {
      "exclude": ["no-import-prefix"]
    },
    "exclude": [".specify/", ".github/", ".vscode/", "specs/", "_site/"]
  },
  "fmt": {
    "exclude": [".specify/", ".github/", ".vscode/", "specs/", "_site/"]
  },
  "permissions": {
    "lume": {
      "all": true
    }
  }
}
